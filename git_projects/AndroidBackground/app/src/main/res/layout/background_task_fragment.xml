<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BackgroundTask">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="Immediate"
        android:id="@+id/btnImmediate"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnImmediate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="Exact"
        android:id="@+id/btnExact"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnExact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="Differ"
        android:id="@+id/btnDiffer"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="ReadMe"
        android:gravity="center"
        android:textColor="@color/blue"
        android:id="@+id/tvReadMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>